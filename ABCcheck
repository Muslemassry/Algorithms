<script>
function testFunc(str) {
  var r1 = /a[a-zA-Z0-9\s]{3}b/gi;
  var matches = str.match(r1);

  if (matches) {
    return "true";
  } else {
    return "false";
  }
}

alert(testFunc("hello=ahm a - bfreak andbbmoA tebrlucher"));
</script>
